@page
@model CourseModel

<div class="container">
    <div class="container-fluid mt-3 mb-3">
        <br />
        <br />
        <div class="row g-2">
            <h3>Course page</h3>
        </div>
        <div class="row g-2">
            @foreach (var item in Model.Courses)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="img-container">
                            <div class="d-flex justify-content-between align-items-center p-2 first">
                                <span class="percent">-@item.Discount%</span>
                                <span class="wishlist"><i class="fa fa-heart"></i></span>
                            </div>
                            @*asp-append-version="true" *@
                            <img src="~/images/Course/@item.ImageFile" class="img-fluid course-img">
                        </div>
                        <div class="product-detail-container">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0 font-weight-bold">@item.Name</h6>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <p>@item.Summary</p>
                            </div>
                            <div class="mt-3">
                                <a class="btn btn-danger btn-block"
                                   asp-page="item" asp-route-slug="@item.Slug">Detail</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
