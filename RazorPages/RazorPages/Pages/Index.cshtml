@page
@model IndexModel

<div class="container">
    <div class="container-fluid mt-3 mb-3">
        <br />
        <br />
        <div class="row g-2">
            <h3>Home page</h3>
        </div>
        <div class="row g-2">
            <h2>Tag helper cache example: </h2>
            @*<cache expires-after="TimeSpan.FromSeconds(10)" vary-by-query="param">*@
            <h2>Current date time: @DateTime.Now</h2>
            @*</cache>*@
        </div>
        <div class="row g-2">
            @foreach (var course in Model.Courses)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="img-container">
                            <div class="d-flex justify-content-between align-items-center p-2 first">
                                <span class="percent">-@course.Discount%</span>
                                <span class="wishlist"><i class="fa fa-heart"></i></span>
                            </div>
                            @*asp-append-version="true" *@
                            <img src="~/images/Course/@course.ImageFile" class="img-fluid course-img">
                        </div>
                        <div class="product-detail-container">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0 font-weight-bold">@course.Name</h6>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <p>@course.Summary</p>
                            </div>
                            <div class="mt-3">
                                <a class="btn btn-danger btn-block"
                                   asp-page="DetailCourse" asp-route-slug="@course.Slug">Detail</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

